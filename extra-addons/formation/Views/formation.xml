<openerp>
    <data>
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->

        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Cours</field>
            <field name="res_model">formation.cours</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_courses': 1}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Creer le premier cours
                </p>
            </field>
        </record>

        <!-- top level menu: no parent-->
        <menuitem id="main_openacademy_menu" name="Open Academy"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="openacademy_menu" name="Open Academy"
                  parent="main_openacademy_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action course_list_action -->
        <menuitem id="courses_menu" name="Cours" parent="openacademy_menu"
                  action="course_list_action"/>

        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">formation.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,gantt,graph,kanban</field>
        </record>

        <menuitem id="session_menu" name="Sessions"
                  parent="openacademy_menu"
                  action="session_list_action"/>

        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->

        <record model="ir.ui.view" id="cours_tree_view">
            <field name="name">cours.list</field>
            <field name="model">formation.cours</field>
            <field name="arch" type="xml">
                <tree string="Cours">
                    <field name="titre"/>
                    <field name="responsable_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="cours_search_view">
            <field name="name">cours.search</field>
            <field name="model">formation.cours</field>
            <field name="arch" type="xml">
                <search>
                    <field name="titre"/>
                    <field name="description"/>
                    <field name="responsable_id" invisible="True"/>
                    <filter name="mes_cours" string="Mes Cours"
                            domain="[('responsable_id', '=', uid)]"/>
                    <group string="Group By">
                        <filter name="by_responsable" string="Responsable"
                                context="{'group_by': 'responsable_id'}"/>
                    </group>

                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="cours_form_view">
            <field name="name">cours.form</field>
            <field name="model">formation.cours</field>
            <field name="arch" type="xml">
        <!-- view content: <form>, <tree>, <graph>, ... -->
                <form string="Formulaire du cours">
                    <sheet>
                        <group>
                            <field name="id" invisible="1" />
                            <field name="titre"/>
                            <field name="responsable_id"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page attrs="{'invisible': [('id', '=', False)]}" string="Sessions">
                                <field name="session_ids">
                                    <tree string="Session Enregistrees">
                                        <field name="nom"/>
                                        <field name="instructeur_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="session_tree_view">
            <field name="name">session.list</field>
            <field name="model">formation.session</field>
            <field name="arch" type="xml">
                <tree string="Sessions" colors="blue:duree&lt;5;red:duree&gt;15">
                    <field name="nom"/>
                    <field name="cours_id"/>
                    <field name="places_occupees" widget="progressbar"/>
                    <field name="duree" invisible="True"/>
                </tree>
            </field>
        </record>

                <!-- session form view -->
        <record model="ir.ui.view" id="session_form_view">
            <field name="name">session.form</field>
            <field name="model">formation.session</field>
            <field name="arch" type="xml">
                <form string="Formulaire de la session">
                    <header>
                        <button name="action_brouillon" type="object"
                                string="Remettre en brouillon"
                                states="confirme,termine"/>
                        <button name="action_confirmer" type="object"
                                string="Confirmer" states="brouillon"
                                class="oe_highlight"/>
                        <button name="action_terminer" type="object"
                                string="Marquer comme terminÃ©e" states="confirme"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="General">
                                <field name="cours_id"/>
                                <field name="nom"/>
                                <field name="instructeur_id"/>
                                <field name="active"/>
                            </group>
                            <group string="Programme">
                                <field name="dateDebut"/>
                                <field name="duree"/>
                                <field name="dateFin"/>
                                <field name="nbPlaces"/>
                                <field name="places_occupees" widget="progressbar"/>
                            </group>
                        </group>
                        <label for="participant_ids"/>
                        <field name="participant_ids"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- calendar view -->
        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">session.calendar</field>
            <field name="model">formation.session</field>
            <field name="arch" type="xml">
                <calendar string="Calendrier des sessions" date_start="dateDebut"
                          date_stop="dateFin"
                          color="instructeur_id">
                    <field name="nom"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="session_gantt_view">
            <field name="name">session.gantt</field>
            <field name="model">formation.session</field>
            <field name="arch" type="xml">
                <gantt string="Session Gantt" color="cours_id"
                       date_start="dateDebut" date_delay="heures"
                       default_group_by='instructeur_id'>
                    <field name="nom"/>
                </gantt>
            </field>
        </record>

        <record model="ir.ui.view" id="session_graph_view">
            <field name="name">session.graph</field>
            <field name="model">formation.session</field>
            <!--<field name="nbParticipants" invisible="True"/>-->
            <field name="arch" type="xml">
                <graph string="Nombre de participants par session">
                    <field name="nom"/>
                    <field name="nbParticipants" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="session_kanban_view">
            <field name="name">session.kanban</field>
            <field name="model">formation.session</field>
            <field name="arch" type="xml">
                <kanban default_group_by="cours_id">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                    t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <span class="oe_e">#</span>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Supprimer</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Nom de session:
                                    <field name="nom"/>
                                    <br/>
                                    Date de debut:
                                    <field name="dateDebut"/>
                                    <br/>
                                    duree:
                                    <field name="duree"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>



    </data>
</openerp>