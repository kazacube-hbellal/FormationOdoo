<openerp>
    <data>
        <record id="group_manager" model="res.groups">
            <field name="name">OpenAcademy / Manager</field>
        </record>
        <record id="responsable_modification_cours" model="ir.rule">
            <field name="name">Seulement le responsable peut modifier le cours</field>
            <field name="model_id" ref="model_formation_cours"/>
            <field name="groups" eval="[(4, ref('formation.group_manager'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                ['|', ('responsable_id','=',False),
                      ('responsable_id','=',user.id)]
            </field>
        </record>

    </data>
</openerp>
